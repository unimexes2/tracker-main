
  <link rel="stylesheet" href="/stylesheets/style.css" />
 


<div id="id01" class="modal" style.display='block'>
  <span onclick="document.getElementById('id01').style.display='none'" class="close" title="Close Modal">&times;</span>
  <form class="modal-content" action="/login" method="POST">
    <div class="form-container">
      <h1>Login</h1>
      <p>Please fill in this form to login.</p>
      <hr>

      <label for="username"><b>Username</b></label>
      <input type="text" placeholder="Enter username" name="username" required>
      <label for="psw"><b>Password</b></label>
      <input type="password" placeholder="Enter Password" name="password" required autocomplete="on">
            
      <label>
        <input type="checkbox" checked="checked" name="remember" style="margin-bottom:15px"  autocomplete="on"> Remember me
      </label>
 {{#if errorMessage}}

    <p class="error">{{errorMessage}}</p>

  {{/if}}


      <div class="clearfix">
        <button type="button" onclick="document.getElementById('id01').style.display='none'" class="cancelbtn">Cancel</button>
        <button type="submit" class="signupbtn">Log in</button>
      </div>
    </div>
  </form>
</div>





<script>
// Get the modal
var modal = document.getElementById('id01');
document.getElementById('id01').style.display='block';
// When the user clicks anywhere outside of the modal, close it
window.onclick = function(event) {
  if (event.target == modal) {
    modal.style.display = "none";
  }
}
</script>
  


